<resources>

    <style name="AndFrame" parent="@android:style/Theme.Black.NoTitleBar">
    </style>

    <style name="AndFrame.Divison">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/af_division_line</item>
        <item name="android:background">@color/af_divison</item>
        <item name="android:divider">@color/af_divison</item>
        <item name="android:dividerHeight">1.0px</item>
    </style>

    <style name="AndFrame.Divison.Vertical">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">@dimen/af_division_line</item>
        <item name="android:background">@color/af_divison</item>
    </style>

    <style name="AndFrame.Label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/af_textsize_content</item>
        <item name="android:textColor">@color/af_text_content</item>
    </style>

    <style name="AndFrame.Label.Title">
        <item name="android:textColor">@color/af_text_title</item>
        <item name="android:textSize">@dimen/af_textsize_title</item>
    </style>

    <style name="AndFrame.Label.Title.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AndFrame.Label.Small">
        <item name="android:textColor">@color/af_text_content</item>
        <item name="android:textSize">@dimen/af_textsize_small</item>
    </style>

    <style name="AndFrame.Label.Discription">
        <item name="android:textColor">@color/af_text_content</item>
        <item name="android:textSize">@dimen/af_textsize_content</item>
        <item name="android:singleLine">false</item>
    </style>

    <style name="AndFrame.Label.Assistant">
        <item name="android:textColor">@color/af_text_assistant</item>
        <item name="android:textSize">@dimen/af_textsize_content</item>
    </style>

    <style name="AndFrame.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/af_textsize_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/af_button_blue</item>
    </style>

    <style name="AndFrame.Button.Blue">
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@drawable/af_button_blue</item>
    </style>

    <style name="AndFrame.Button.Green">
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@drawable/af_button_green</item>
    </style>

    <style name="AndFrame.Button.Orange">
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@drawable/af_button_orange</item>
    </style>

</resources>
