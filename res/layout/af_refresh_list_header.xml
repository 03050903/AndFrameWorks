<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/refresh_list_header_lty"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="@color/transparent">

    <RelativeLayout
        android:id="@+id/refresh_list_header"
        android:layout_width="match_parent"
    	android:layout_height="80dip"
    	android:background="@color/transparent">

        <ProgressBar
            style="?android:attr/progressBarStyle"
            android:id="@+id/refresh_list_header_progressbar"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_marginLeft="50dip"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:visibility="gone" >
        </ProgressBar>

        <ImageView
            android:id="@+id/refresh_list_header_pull_down"
            android:layout_width="15dip"
            android:layout_height="60dip"
            android:layout_marginLeft="50dip"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/af_refresh_list_pull_down" />

        <ImageView
            android:id="@+id/refresh_list_header_release_up"
            android:layout_width="15dip"
            android:layout_height="60dip"
            android:layout_marginLeft="50dip"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/af_refresh_list_release_up"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/refresh_list_header_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_gravity="center_horizontal"
                android:text="@string/refresh_header_pulldown"
                android:textColor="@color/green_dark"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/refresh_list_header_last_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/refresh_header_update"
                android:textColor="@color/gray"
                android:textSize="15sp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>