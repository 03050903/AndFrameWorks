<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/titlebar_select"
    android:layout_width="match_parent"
    android:layout_height="@dimen/titlebar_height"
    android:background="@color/theme_titlebar_selcet_dg" >
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:layout_alignParentBottom="true"
        android:background="@color/theme_titlebar_selcet"/>
    
    <ImageView
        android:id="@+id/titlebar_select_finish"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/titlebar_height"
        android:contentDescription="@string/app_name"
        android:background="@drawable/selector_background"
        android:src="@drawable/icon_goback"/>
    
    <View 
        android:layout_width="1dip"
        android:layout_height="match_parent"
        android:layout_marginTop="10dip"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="0dip"
        android:layout_toRightOf="@+id/titlebar_select_finish"
        android:layout_centerVertical="true"
        android:background="#550099EE"/>
    
    <ImageView
        android:id="@+id/titlebar_select_operate"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/titlebar_height"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/app_name"
        android:background="@drawable/selector_background"
        android:src="@drawable/icon_menu"/>
    
    <TextView
        android:id="@+id/titlebar_select_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/titlebar_select_finish"
        android:layout_toLeftOf="@+id/titlebar_select_operate"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:text="@string/app_name"
        android:textSize="@dimen/titlebar_textsize"
        android:textColor="@color/theme_textcolor_title"  />

</RelativeLayout>