<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/af_titlebar_other_layout"
    android:layout_width="match_parent"
    android:layout_height="45dip"
    android:background="#222222" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:background="@color/transparent">
        <ImageView
            android:id="@+id/af_titlebar_left_goback"
            android:layout_width="70dip"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:contentDescription="@string/app_name"
            android:background="@drawable/af_selector_background"
            android:scaleType="centerInside"
            android:src="@drawable/af_icon_goback" />
        <TextView
            android:id="@+id/af_titlebar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/app_name"
            android:singleLine="true"
            android:textColor="#FFFFFFFF"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/af_titlebar_right_img"
            android:layout_width="70dip"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/app_name"
            android:background="@drawable/af_selector_background"
            android:scaleType="centerInside"
            android:visibility="gone"
            android:src="@drawable/af_icon_menu" />

        <TextView
            android:id="@+id/af_titlebar_right_txt"
            android:layout_width="70dip"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/af_selector_background"
            android:gravity="center"
            android:visibility="gone"
            android:textColor="#FFFFFFFF"
            android:textSize="14sp"/>
    </RelativeLayout>
</LinearLayout>