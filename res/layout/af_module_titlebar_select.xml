<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/af_titlebar_select"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:background="#FF005983" >
        <View
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:layout_alignParentBottom="true"
            android:background="#FF0099E5"/>
        <ImageView
            android:id="@+id/af_titlebar_select_finish"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:layout_width="wrap_content"
            android:layout_height="45dip"
            android:contentDescription="@string/app_name"
            android:background="@drawable/af_selector_background"
            android:src="@drawable/af_icon_goback"/>
        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:layout_marginTop="10dip"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="0dip"
            android:layout_toRightOf="@+id/af_titlebar_select_finish"
            android:layout_centerVertical="true"
            android:background="#550099EE"/>
        <ImageView
            android:id="@+id/af_titlebar_select_operate"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:layout_width="wrap_content"
            android:layout_height="45dip"
            android:layout_alignParentRight="true"
            android:contentDescription="@string/app_name"
            android:background="@drawable/af_selector_background"
            android:src="@drawable/af_icon_menu"/>
        <TextView
            android:id="@+id/af_titlebar_select_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/af_titlebar_select_finish"
            android:layout_toLeftOf="@+id/af_titlebar_select_operate"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:text="@string/app_name"
            android:textSize="22sp"
            android:textColor="@color/white"  />
    </RelativeLayout>
</FrameLayout>