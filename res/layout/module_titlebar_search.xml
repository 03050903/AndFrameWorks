<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/titlebar_search_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/titlebar_height"
    android:background="@color/theme_titlebar_selcet_dg" >
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:layout_alignParentBottom="true"
        android:background="@color/theme_titlebar_selcet"/>
    
    <TextView
        android:id="@+id/titlebar_search_option"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/titlebar_height"
        android:contentDescription="@string/app_name"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/gray_white"
        android:textSize="@dimen/textsize_titlesmall"
        android:background="@drawable/selector_background"
		android:drawableRight="@drawable/ic_dropdown_arrow"/>
    
    <View 
        android:layout_width="1dip"
        android:layout_height="match_parent"
        android:layout_marginTop="10dip"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="0dip"
        android:layout_toRightOf="@+id/titlebar_search_option"
        android:layout_centerVertical="true"
        android:background="#55999999"/>
    
    <ImageView
        android:id="@+id/titlebar_search_go"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/titlebar_height"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/app_name"
        android:background="@drawable/selector_background"
        android:src="@drawable/icon_search"/>
    
    <EditText
        android:id="@+id/titlebar_search_keyword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/titlebar_search_option"
        android:layout_toLeftOf="@+id/titlebar_search_go"
        android:layout_marginLeft="10dip"
        android:ems="10"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:singleLine="true"
        android:hint="@string/app_name"
        android:textSize="@dimen/textsize_titlesmall"
        android:textColor="@color/theme_textcolor_title"  />

</RelativeLayout>