<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar style="@style/AndFrame.Toolbar"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:id="@+id/af_titlebar_layout"
    app:navigationIcon="@drawable/af_icon_goback">

    <TextView style="@style/AndFrame.Toolbar.Title"
        android:id="@+id/titlebar_title"
        android:text="@string/app_name" />

    <TextView style="@style/AndFrame.Toolbar.Action"
        android:id="@+id/titlebar_right_button"
        tools:text = "操作"/>

</android.support.v7.widget.Toolbar>