<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppThemeBase">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.SwipeBack" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/activityAnimation</item>
        <!--<item name="android:windowBackground">@android:color/transparent</item>-->
    </style>

    <style name="AppTheme.ClickableBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="activityAnimation" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/page_enter</item>
        <item name="android:windowExitAnimation">@anim/page_exit</item>
        <item name="android:activityOpenEnterAnimation">@anim/page_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/page_exit</item>
    </style>

</resources>
